{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        // we only want single quotes
        "quotes": ["error", "single"],
        // we want to force semicolons
        "semi": ["error", "always"]
    }
}
